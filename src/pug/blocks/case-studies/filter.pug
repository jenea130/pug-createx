.filter 
    .filter__header 
        button.filter__btn.active(data-target="") All case studies
        button.filter__btn(data-target="social-media") Social Media
        button.filter__btn(data-target="seo") Seo
        button.filter__btn(data-target="research") Research
        button.filter__btn(data-target="content-pr") Content & PR
        button.filter__btn(data-target="payed-traffic") Payed Traffic
    .filter__wrap
        .filter__item(data-filter="social-media")
            .item-filter
                .item-filter__picture
                    img.item-filter__img(src="assets/img/case-studies/filter/filter-1.jpg" alt="")
                    .item-filter__info
                        img.item-filter__logo(src="assets/img/case-studies/filter/filter-logo-1.png" alt="")
                        .item-filter__label Charity organisation
                .item-filter__content 
                    .ranges
                        .ranges__wrap
                            +range("75 100", "90%", "Engagement", "#F89828" )
                            +range("100 100", "100%", "Deliverability", "#03CEA4" )
                    .item-filter__text.text Createx SEO Agency helped JNational Inc. increase their MQL to SQL conversion rate by 300%.
                    +link("single-case-studies.html", "View case")
        .filter__item(data-filter="seo")
