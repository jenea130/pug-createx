                        img.item-filter__logo(src="assets/img/case-studies/filter/filter-logo-2.png" alt="")
                        .item-filter__label Oil and natural resources
                .item-filter__content
                    .ranges
                        .ranges__wrap
                            +range("100 100", "200%", "Growth in sales", "#5A87FC" )
